@inject TKMS.Service.Interfaces.IUserProviderService userProviderService
    <!-- ======= Header ======= -->
<header id="header" class="header fixed-top d-flex align-items-center headerClass">
    <div class="d-flex align-items-center justify-content-between">
        <a asp-area="" asp-controller="Home" asp-action="Index" class="logo d-flex align-items-center">
            <img class="bfilLogo" src="~/assets/img/bfil-logo.png" alt="" />
        </a>

    </div>
    <!-- End Logo -->

    <nav class="header-nav ms-auto">
        <ul class="d-flex align-items-center">

            @if (userProviderService.BM() || userProviderService.BCM() || userProviderService.ROKitManagement() || userProviderService.Staff())
            {
                <li class="nav-item dropdown" id="notication-details">

                </li>
            }

            <li class="nav-item dropdown pe-3">

                <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
                    <span class="d-none d-md-block dropdown-toggle ps-2">@userProviderService.UserClaim.Name</span>
                </a>
                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
                    <li class="dropdown-header">
                        <h6>@userProviderService.GetRoleTypeName()</h6>
                        <span>@userProviderService.GetRoleName() - @userProviderService.UserClaim.BranchCode</span>
                    </li>
                    <li>
                        <hr class="dropdown-divider">
                    </li>

                </ul>
            </li>
        </ul>
    </nav>
</header>
