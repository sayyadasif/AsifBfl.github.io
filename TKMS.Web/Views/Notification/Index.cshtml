@model List<TKMS.Abstraction.ComplexModels.NotificationModel>
@using Core.Utility.Utils
@{
    ViewData["Title"] = "Notifications";
}

<section class="section">
    <div class="row row1">
        <div class="col-lg-12">

            <div class="card-body">
                <h5 class="card-title">Notifications</h5>

                @foreach (var notification in Model)
                {
                    <a href="@notification.RedirectUrl" class="list-group-item list-group-item-action @(notification.IsActive ? "unread" : "read")" aria-current="true">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">@notification.Title</h5>
                            <small>@CommonUtils.GetFormatedDate(notification.NotificationDate)</small>
                        </div>
                        <p class="mb-1 notificationDescription">@Html.Raw(notification.Description)</p>
                    </a>
                }
            </div>
        </div>
    </div>

</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
