@model TKMS.Abstraction.ComplexModels.IndentDetailModel

<div class="accordion" id="accordionRejectionDetail">
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingRejectionDetail">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#rejectionDetail" aria-expanded="true" aria-controls="rejectionDetail">
                Rejection Detail
            </button>
        </h2>
        <div id="rejectionDetail" class="accordion-collapse collapse show" aria-labelledby="headingRejectionDetail" data-bs-parent="#accordionRejectionDetail">
            <div class="accordion-body">
                <div class="row g-3">
                    <div class="form-group col-md-12">
                        <label class="control-label">Reason for Rejection </label>
                        <div class="control-detail">
                            @Model.RejectedReason
                        </div>
                    </div>
                </div>
                <div class="row g-3">
                    <div class="form-group col-md-12">
                        <label class="control-label">Remarks</label>
                        <div class="control-detail">
                            @Model.Remarks
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

