@{
    ViewData["Title"] = "Kits";
}

<section class="section">
    <div class="row row1">
        <div class="col-lg-12">
            <!-- Tabs navs -->
            <ul class="nav nav-pills mb-3" id="kitTab" role="tablist">

                <li class="nav-item" role="presentation">
                    <a class="nav-link"
                       id="kitTransferTab"
                       data-toggle="tab"
                       href="#kitTransfer"
                       role="tab"
                       aria-controls="kitTransfer"
                       aria-selected="true"
                       statusId="2">Kits</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link"
                       id="kitSentTab"
                       data-toggle="tab"
                       href="#kitSent"
                       role="tab"
                       aria-controls="kitSent"
                       aria-selected="true"
                       statusId="7"
                       isSent="true">Kits Sent</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link"
                       id="kitReceivedTab"
                       data-toggle="tab"
                       href="#kitReceived"
                       role="tab"
                       aria-controls="kitReceived"
                       aria-selected="true"
                       statusId="2"
                       isSent="false">Kits Received</a>
                </li>
            </ul>
            <!-- Tabs navs -->

            <partial name="_KitFilters" />
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <!-- Tabs content -->
                            <div class="tab-content" id="kitTabContent">

                                <div class="tab-pane fade show"
                                     id="kitTransfer"
                                     role="tabpanel"
                                     aria-labelledby="kitTransfer">
                                    <div class="text-right">
                                        <button type="button" id="btnKitsTransfer" class="btn btn-success allocate_btn">Transfer</button>
                                    </div>
                                    <table id="kitTransferDatatable" class="table datatable" width="100%" cellspacing="0">
                                        <thead>
                                            <tr>
                                                <th class="no-sort"></th>
                                                <th>Indent<br />Number</th>
                                                <th>Account<br />Number</th>
                                                <th>CIF<br />Number</th>
                                                <th>Branch<br />Code</th>
                                                <th>Branch<br />Name</th>
                                                <th>BFIL<br />Branch Code</th>
                                                <th>Card<br />Type</th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>

                                <div class="tab-pane fade show"
                                     id="kitSent"
                                     role="tabpanel"
                                     aria-labelledby="kitSent">
                                    <table id="kitSentDatatable" class="table datatable" width="100%" cellspacing="0">
                                        <thead>
                                            <tr>
                                                <th>Indent<br />Number</th>
                                                <th>Account<br />Number</th>
                                                <th>Date</th>
                                                <th>CIF<br />Number</th>
                                                <th>Branch<br />Code</th>
                                                <th>Branch<br />Name</th>
                                                <th>BFIL<br />Branch Code</th>
                                                <th>Card<br />Type</th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>

                                <div class="tab-pane fade show"
                                     id="kitReceived"
                                     role="tabpanel"
                                     aria-labelledby="kitReceived">
                                    <table id="kitReceivedDatatable" class="table datatable" width="100%" cellspacing="0">
                                        <thead>
                                            <tr>
                                                <th>Indent<br />Number</th>
                                                <th>Account<br />Number</th>
                                                <th>Date</th>
                                                <th>CIF<br />Number</th>
                                                <th>Branch<br />Code</th>
                                                <th>Branch<br />Name</th>
                                                <th>BFIL<br />Branch Code</th>
                                                <th>Card<br />Type</th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/branchtransfer.js"></script>
}
